{% extends 'base.html.twig' %}

{% block title %}Détail d'un stagiaire{% endblock %}

{% block body %}

<div class="wrapper">
    <h1>Détail d'un stagiaire</h1>
    <article class="info-formation">

        <h2>{{ stagiaire }}</h2>

        <p>Date de naissance : {{ stagiaire.birthdayFr }}</p>
        <p>Ville : {{ stagiaire.city }}</p>
        <p>E-mail : {{ stagiaire.email }}</p>
        <p>Numéro de téléphone : {{ stagiaire.phoneNumber }}</p>

    </article>
    <p>Vous souhaitez modifier les données sur un stagiaire ? </p>
    {# <a href="{{ path('edit_stagiaire', {'id':stagiaire.id}) }}">Editer</a> #}
</div>

{% endblock %}